        style2-foreground-light = ${ColorEditor.lightenHsla(this.style2-background,40)}
        style2-foreground-light.@if.isset =  ${q(site).property('style2Bg')}

        style2-foreground-bold = ${q(site).property('style2Fg')}
        style2-foreground-bold.@if.isset =  ${q(site).property('style2Fg')}

        style2-border = ${q(site).property('style2Border')}
        style2-border.@if.isset =  ${q(site).property('style2Border')}

        style2-border-background = ${q(site).property('style2BorderBg')}
        style2-border-background.@if.isset =  ${q(site).property('style2BorderBg')}

        style2-border2-background = ${ColorEditor.makeHslaTransparent(this.style2-border-background,25)}
        style2-border2-background.@if.isset =  ${q(site).property('style2BorderBg')}

        style3-background = ${q(site).property('style3Bg')}
        style3-background.@if.isset =  ${q(site).property('style3Bg')}

        style3-foreground = ${ColorEditor.lightenHsla(this.style3-background,25)}
        style3-foreground.@if.isset =  ${q(site).property('style3Bg')}

        style3-foreground-light = ${ColorEditor.lightenHsla(this.style3-background,40)}
        style3-foreground-light.@if.isset =  ${q(site).property('style3Bg')}

        style3-foreground-bold = ${q(site).property('style3Fg')}
        style3-foreground-bold.@if.isset =  ${q(site).property('style3Fg')}

