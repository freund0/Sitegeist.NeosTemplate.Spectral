        style3-border2-background.@if.isset =  ${q(site).property('style3BorderBg')}
    }

    renderer = Neos.Fusion:Loop {
        items = ${props.variables}
        itemName = "value"
        itemKey = "var"
        itemRenderer = ${'--' + var + ':' + value + ';'}
        @process.wrap = ${'<style> :root{ ' + value + ' } </style>'}
    }
